<resources>
    <style name="LightMode" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="bkgAvatarShimmer">@color/paleYellow</item>
        <item name="bkgDividerColor">@color/lightBlack</item>
        <item name="bkgElevatedElement">@color/paleWhite</item>
        <item name="bkgGeneralIcon">@color/white</item>
        <item name="bkgMainLogo">@color/yellow</item>
        <item name="bkgOpenedIndicator">@color/gray</item>
        <item name="bkgSecondaryLogo">@color/black</item>
        <item name="bkgSideNavHeader">@color/white</item>
        <item name="bkgScreen">@color/white</item>
        <item name="bkgToolbar">@color/yellow</item>
        <item name="bkgUnopenedIndicator">@color/yellow</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="HomeGeneralFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="tint">@color/black</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="HomeTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MainContentTransactionTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="MainContentTransactionSubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="SideNavHeaderTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="SideNavItemTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

</resources>